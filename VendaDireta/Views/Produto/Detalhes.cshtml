@model VendaDireta.Models.Produto

@{
    Layout = null;

    VendaDireta.Models.Usuario DadosUsuario = (VendaDireta.Models.Usuario)ViewData["DadosUsuario"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Venda Direta</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" asp-action="Listar">Venda Direta</a>
        <a asp-action="Sair" class="my-2">Sair</a>
    </nav>

    <div class="row">
        <div class="col-md-4">
            Usuario: @DadosUsuario.Nome
            <br>
            Receita: @DadosUsuario.Receita.ToString("0.00")
        </div>
    </div>

    </br>

    <div class="row">
        <div class="col-md-4">
            <h4>Comprar produto</h4>
            <hr />
            <form asp-action="Comprar" asp-route-id="@Model.ProdutoId" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <input type="submit" value="Confirmar compra" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Listar">Voltar</a>
    </div>

</body>
</html>